<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.oomall.mapper.RegionMapper">

    <select id="getAll">
        select * from region
    </select>

    <select id="getRegionsByPid" parameterType="Integer" resultType="region">
        select * from region where pid = #{pid}
    </select>

    <select id="getRegionByPostcode">
        select * from region where post_code = #{post_code}
    </select>

    <insert id="addRegion" parameterType="region" useGeneratedKeys="true" keyProperty="id">
        insert into region(id, pid, `name`, `type`, post_code)
        values (#{id},#{pid}, #{name}, #{type}, #{post_code})
    </insert>

    <update id="updateRegion" parameterType="region" useGeneratedKeys="true" >
        update region set
            pid = #{pid},
            `name` = #{name},
            `type` = #{type},
            post_code = #{post_code}
        where id = #{id}
    </update>

    <delete id="deleteRegions" parameterType="java.util.List">
        delete from region where id in
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item.id, jdbcType=BIGINT}
        </foreach>
    </delete>
</mapper>